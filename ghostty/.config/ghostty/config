# Font family, default is Jet Brains Mono
font-family = "VictorMono Nerd Font Mono"

# keymaps
keybind = global:cmd+`=toggle_quick_terminal

# keymaps for navigation
keybind = ctrl+h=goto_split:left
keybind = ctrl+j=goto_split:bottom
keybind = ctrl+k=goto_split:top
keybind = ctrl+l=goto_split:right
keybind = ctrl+super+i=equalize_splits

# keymaps for resizing splits
keybind = ctrl+super+h=resize_split:left,250
keybind = ctrl+super+j=resize_split:down,50
keybind = ctrl+super+k=resize_split:up,50
keybind = ctrl+super+l=resize_split:right,250

# Disable dimming for unfocused splits
unfocused-split-opacity = 1
# macos options
macos-titlebar-style = tabs
macos-titlebar-proxy-icon = hidden
macos-option-as-alt = true

# Adjust cursor color
cursor-invert-fg-bg = true

# Try for Myanmar Font
# U+1000-U+109F="Noto Sans Myanmar"

# Set background
# background-opacity = 0.85
# background-blur-radius = 20

# Font size for light theme 21 and dark theme 24
font-size = 21
font-thicken = true
